{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 500,
    "title": "Sum of Generation (TWh) from all Energy Sources by Country from 2000-2020",
    "data": { "url": "data/Pure_Data.csv" },
    "params": [
        {
            "name": "Year",
            "value": 2019,
            "bind": {
              "input": "range",
              "min": 2000,
              "max": 2020,
              "step": 1,
              "name": "Year  "
            }
        },
        {
            "name": "Variable_selection",
            "bind": {
              "input": "select",
              "options": [
                null,
                "Fossil",
                "Coal",
                "Hard Coal",
                "Lignite",
                "Gas",
                "Other fossil",
                "Nuclear",
                "Renewables",
                "Hydro",
                "Wind",
                "Solar",
                "Bioenergy",
                "Other renewables"
              ],
              "labels":[
                "Show all",
                "Fossil",
                "Coal",
                "Hard Coal",
                "Lignite",
                "Gas",
                "Other fossil",
                "Nuclear",
                "Renewables",
                "Hydro",
                "Wind",
                "Solar",
                "Bioenergy",
                "Other renewables"
              ],
              "name": "Energy Source Selection  "
            }
          }
    ],
    "transform": [
        {"filter": "datum.Year == Year"},
        {"filter": "Variable_selection == null || datum.Variable == Variable_selection"}
    ],
    "mark": { "type": "bar" },
    "encoding": {
        "x": { 
          "field": "Area", 
          "title": "European Countries" 
        },
        "y": { 
          "aggregate": "sum", 
          "field": "Generation (TWh)",
          "scale":{
            "domain": [0, 1500]
          }
        },
        "color": { "field": "Variable", "title": "Energy Source" },
        "tooltip": [
            {"field": "Area", "type": "nominal"},
            {"field": "Generation (TWh)", "type": "quantitative"},
            {"field": "Share of production (%)", "type": "quantitative"},
            {"field": "Change on last year (TWh)", "type": "quantitative"},
            {"field": "Change on last year (%)", "type": "quantitative"},
            {"field": "Variable", "type": "nominal"}
          ]
    }
}